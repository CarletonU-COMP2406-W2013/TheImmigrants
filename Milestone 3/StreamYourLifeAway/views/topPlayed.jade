extends layout

block content
	.container-narrow
		.masthead
			ul.nav.nav-pills.pull-right
				li
					a(href='/home') Home
				li.active
					a(href='/topvideos') Top Videos
				li
					a(href='/search') Search
			h3.muted The Phoenix Project
		hr
		.jumbotron
			h1 StreamYourLifeAway
		hr
		.row-fluid.description(style='text-align: center;')
			.span12
				h2
					| Top 6 Music Videos
